{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "experimentalDecorators": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./typings"
    ],
    "newLine": "LF",
    "outDir": "build",
    "rootDir": "./"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
